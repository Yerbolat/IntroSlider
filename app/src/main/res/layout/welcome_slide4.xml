<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <LinearLayout
        android:id="@+id/fly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="3dp"
             android:layout_marginRight="13dp"
             android:layout_weight="1"
             android:orientation="vertical">
             <ImageButton
                 android:id="@+id/math"
                 android:layout_width="150dp"
                 android:layout_height="140dp"
                 android:layout_weight="1"
                 android:layout_marginLeft="4dp"
                 android:src="@drawable/calculator"
                 android:background="@drawable/non_select"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Математика"
                 android:textColor="#929292"
                 android:textAlignment="center"
                 android:layout_margin="5dp"
                 android:textSize="24dp"
                 />
         </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/fizik"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:src="@drawable/blackboard"
                android:background="@drawable/non_select"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Физика"
                android:textAlignment="center"
                android:textColor="#929292"
                android:layout_margin="5dp"
                android:textSize="24dp"/>
        </LinearLayout>


     </LinearLayout>
         <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:paddingLeft="@dimen/desc_padding"-->
            <!--android:paddingRight="@dimen/desc_padding"-->
            <!--android:text="@string/slide_4_desc"-->
            <!--android:textAlignment="center"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="@dimen/slide_desc" />-->

    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/next_btn_bg"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/fly"
        android:text="Начать!"
        android:textColor="#FFF"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/next_btn_bg"
        android:layout_marginBottom="90dp"
        android:text="Логин"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/start"
        android:layout_alignStart="@+id/start"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_4_title"
        android:textColor="#7a7a7a"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/fly"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>