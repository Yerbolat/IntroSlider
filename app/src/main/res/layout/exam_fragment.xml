<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#f7f6f6"
    tools:context="info.androidhive.introslider.ActivityUserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="Предметы"
            android:textSize="25dp"
            android:textColor="#606060"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/arrow"
            android:rotation="90"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <ImageButton
            android:id="@+id/equation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_buttons"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/three_book"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equation"
            android:textColor="#444444"
            android:textSize="25dp"
            android:layout_margin="6dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/derivative"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bg_buttons"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:src="@drawable/three_book"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Derivative"
                android:textColor="#444444"
                android:textSize="25dp"
                android:layout_margin="6dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/logarithm"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bg_buttons"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:src="@drawable/three_book"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logarithm"
                android:textColor="#444444"
                android:textSize="25dp"
                android:layout_margin="6dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/content_main" />
    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/myBottomNavigation_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>